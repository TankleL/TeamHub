<Window x:Class="TeamHub_FrontEnd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TeamHub_FrontEnd"
        Title="MainWindow" Height="600" Width="1000" WindowStyle="None" BorderThickness="0" BorderBrush="#FF4C8BF5" AllowsTransparency="True"
        Loaded="Window_Loaded" Background="{x:Null}" MinWidth="600" MinHeight="500">
    <Window.Effect>
        <DropShadowEffect Color="Gray" ShadowDepth="3" BlurRadius="18"/>
    </Window.Effect>
    <Grid Name="topGrid" Margin="15,15,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Frame Background="#FFEAEAEA" Grid.Row="1"/>
        <Frame Name="frm_TitleFrame" Content="" Margin="0"
               Background="#FF4C8BF5"
               MouseLeftButtonDown="frm_TitleFrame_MouseLeftButtonDown">
        </Frame>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,5,0,5" Content="TeamHub" Foreground="White" FontSize="14"/>

        <local:Sysmenu x:Name="ucl_Sysmenu" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Name="btn_1" Content="Chang Theme" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" VerticalAlignment="Top" Width="97" Click="btn_1_Click" Grid.Row="1"/>
    </Grid>
</Window>
